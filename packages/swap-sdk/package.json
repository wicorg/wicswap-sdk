{
  "name": "@wicswap/sdk",
  "license": "MIT",
  "version": "13.0.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "ðŸ›  An SDK for building applications on top of Monswap.",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wicorg/wicswap-sdk.git",
    "directory": "packages/swap-sdk"
  },
  "keywords": [
    "monswap",
    "bsc"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest --run",
    "test:u": "vitest --run -u",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "@wicswap/chains": "workspace:^",
    "@wicswap/swap-sdk-core": "workspace:*",
    "@wicswap/swap-sdk-evm": "workspace:*",
    "@wicswap/v2-sdk": "workspace:*",
    "big.js": "^5.2.2",
    "decimal.js-light": "^2.5.0",
    "tiny-invariant": "^1.3.0",
    "tiny-warning": "^1.0.3",
    "toformat": "^2.0.0",
    "viem": "^2.22.23"
  },
  "devDependencies": {
    "@types/big.js": "^4.0.5",
    "tsup": "^6.7.0"
  },
  "engines": {
    "node": ">=10"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true
  }
}
